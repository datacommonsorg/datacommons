{
  "@context": {
    "kg":       "https://example.org/kg#",   
    "@vocab":   "https://example.org/kg#",
  },
  
  "@graph": [
    {
      "@id":   "kg:Resource",
      "@type": "kg:Class",
      "rdfs:comment": "The generic root class for all things in our KG."
    },
    {
      "@id":   "kg:Class",
      "@type": "kg:Class",
      "rdfs:subClassOf": { "@id": "kg:Resource" }
    },
    {
      "@id":   "kg:Property",
      "@type": "kg:Class",
      "rdfs:subClassOf": { "@id": "kg:Resource" }
    },
    {
      "@id":   "kg:DataType",
      "@type": "kg:Class",
      "rdfs:subClassOf": { "@id": "kg:Resource" }
    },
    
    /* primitive datatypes */
    { "@id": "kg:String",   "@type": "kg:DataType" },
    { "@id": "kg:Number",   "@type": "kg:DataType" },
    { "@id": "kg:Boolean",  "@type": "kg:DataType" },
    { "@id": "kg:Date",     "@type": "kg:DataType" },
    { "@id": "kg:DateTime", "@type": "kg:DataType" },
    { "@id": "kg:Time",     "@type": "kg:DataType" },
    
    /* core property descriptors */
    {
      "@id":   "kg:domainIncludes",
      "@type": "kg:Property",
      "domainIncludes": { "@id": "kg:Property" },
      "rangeIncludes":  { "@id": "kg:Class" }
    },
    {
      "@id":   "kg:rangeIncludes",
      "@type": "kg:Property",
      "domainIncludes": { "@id": "kg:Property" },
      "rangeIncludes":  { "@id": "kg:DataType" }
    }
  ]
}